<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:orientation="vertical" >


    <TextView
        android:id="@+id/tvtitol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:text="@string/title"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tvinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:text=""
        android:layout_weight="1"/>
    <LinearLayout
        android:id="@+id/layout0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
>
        <ImageView
            android:id="@+id/ivcard0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/back"/>
        <ImageView
            android:id="@+id/ivcard1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/back"/>
        <ImageView
            android:id="@+id/ivcard2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/back"/>
        <ImageView
            android:id="@+id/ivcard3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/back"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
>
        <ImageView
            android:id="@+id/ivcard4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/back"/>
        <ImageView
            android:id="@+id/ivcard5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/back"/>
        <ImageView
            android:id="@+id/ivcard6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/back"/>
        <ImageView
            android:id="@+id/ivcard7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/back"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvpoints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/points"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tvintents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/intents"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/bstart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/restart_game"
        android:layout_gravity="center"
        android:layout_weight="1"
        />
</LinearLayout>